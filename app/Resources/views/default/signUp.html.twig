{% extends 'base.html.twig' %}

{% block title %}Zarejestruj się na warsztaty językowe AIESEC University{% endblock %}

{% block body %}
    <div class="container" style="width: 300px;">
        <h2>Zarejestruj się</h2>
        {{ form_start(form) }}
        {{ form_errors(form) }}
        <div class="form-group">
            {{ form_label(form.language) }}
            {{ form_errors(form.language) }}
            {{ form_widget(form.language) }} {# <select id="signup_language" ... #}
        </div>
        <div class="form-group">
            {{ form_label(form.group) }}
            {{ form_errors(form.group) }}
            {{ form_widget(form.group) }}{# <select id="signup_group" ... #}
        </div>
        {{ form_end(form) }}
    </div>
    <script>
        var $language = $('#sign_up_language');
        // When sport gets selected ...
        $language.change(function() {
            // ... retrieve the corresponding form.
            var $form = $(this).closest('form');
            // Simulate form data, but only include the selected sport value.
            var data = {};
            data[$language.attr('name')] = $language.val();
            // Submit data via AJAX to the form's action path.
            $.ajax({
                url : $form.attr('action'),
                type: $form.attr('method'),
                data : data,
                success: function(html) {
                    // Replace current position field ...
                    $('#sign_up_group').replaceWith(
                            // ... with the returned one from the AJAX response.
                            $(html).find('#sign_up_group')
                    );
                    // Position field now displays the appropriate positions.
                }
            });
        });
    </script>
{% endblock %}